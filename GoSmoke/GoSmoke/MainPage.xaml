<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GoSmoke"
             x:Class="GoSmoke.MainPage"
                  Title="Main Page" >
        
    <MasterDetailPage.Master>
        <ContentPage Padding="5,10,5,10" Title="Master">
            <StackLayout>
                <Label Text="Master" BackgroundColor="Aqua"></Label>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Title="Detail">
            <StackLayout>
                <StackLayout Orientation="Horizontal" Padding="5"  BackgroundColor="Gray">
                    <Image Source="Burger.png" HeightRequest="20" WidthRequest="20"></Image>
                    <Button Image="Burger.png" Text="Manu" />
                </StackLayout>
                <StackLayout>
                </StackLayout>
            </StackLayout>
        </ContentPage>
        </MasterDetailPage.Detail>
    
</MasterDetailPage>